{
    "name": "Social Media Stopwatch",
    "version": "1.0.0",
    "description": "Timer for how long you spend on Social Media",
    "permissions": ["tabs", "activeTab", "storage", "alarms"],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*"],
            "css": ["timer.css"],
            "js": ["jquery-3.3.1.min.js", "countdown.min.js", "moment.min.js", "timer.js"]
        }
    ],
    "background": {
        "scripts": ["background.js", "countdown.min.js", "moment.min.js", "jquery-3.3.1.min.js"],
        "persistent": true
    },
    "icons": { "128": "images/soc_stop128.png"},
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/soc_stop16.png",
            "32": "images/soc_stop32.png",
            "48": "images/soc_stop48.png",
            "128": "images/soc_stop128.png"
        },
        "icons": {
            "16": "images/soc_stop16.png",
            "32": "images/soc_stop32.png",
            "48": "images/soc_stop48.png",
            "128": "images/soc_stop128.png"
        }
    },
    "manifest_version": 2
}